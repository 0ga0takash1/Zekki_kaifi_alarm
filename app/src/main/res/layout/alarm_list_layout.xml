<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    card_view:cardCornerRadius="7dp"
    card_view:cardElevation="5dp"
    android:foreground="?android:attr/selectableItemBackground">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/alarm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textSize="5sp"
            android:background="@color/black3"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
        />

        <TextView
            android:id="@+id/alarm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textSize="20sp"
            card_view:layout_constraintTop_toBottomOf="@+id/alarm_timing"
            card_view:layout_constraintStart_toStartOf="parent"
        />

        <TextView
            android:id="@+id/sub_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="5sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/alarm_time"
            card_view:layout_constraintLeft_toLeftOf="@+id/alarm_time"
        />

        <TextView
            android:id="@+id/alarm_timing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="11sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/alarm_time"
            card_view:layout_constraintLeft_toLeftOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/alarm_switch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    />
</androidx.cardview.widget.CardView>